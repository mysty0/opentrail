{
  "dashboard": {
    "id": null,
    "title": "OpenTrail Storage Performance",
    "tags": ["opentrail", "storage", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Write Throughput (TPS)",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(opentrail_storage_write_requests_total[1m])",
            "legendFormat": "Writes/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Read Throughput (TPS)",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(opentrail_storage_read_requests_total[1m])",
            "legendFormat": "Reads/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Write Latency",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(opentrail_storage_write_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, rate(opentrail_storage_write_duration_seconds_bucket[5m]))",
            "legendFormat": "99th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(opentrail_storage_write_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Batch Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "opentrail_storage_batch_queue_size",
            "legendFormat": "Queue Size"
          },
          {
            "expr": "opentrail_storage_batch_buffer_size",
            "legendFormat": "Buffer Size"
          },
          {
            "expr": "rate(opentrail_storage_batches_processed_total[1m])",
            "legendFormat": "Batches/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Error Rates",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(opentrail_storage_write_errors_total[1m])",
            "legendFormat": "Write Errors/sec"
          },
          {
            "expr": "rate(opentrail_storage_read_errors_total[1m])",
            "legendFormat": "Read Errors/sec"
          },
          {
            "expr": "rate(opentrail_storage_write_timeouts_total[1m])",
            "legendFormat": "Write Timeouts/sec"
          },
          {
            "expr": "rate(opentrail_storage_queue_full_errors_total[1m])",
            "legendFormat": "Queue Full Errors/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "min": 0
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 6,
        "title": "Database Transaction Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(opentrail_storage_db_transactions_total[1m])",
            "legendFormat": "Transactions/sec"
          },
          {
            "expr": "histogram_quantile(0.95, rate(opentrail_storage_db_transaction_seconds_bucket[5m]))",
            "legendFormat": "95th percentile latency"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 7,
        "title": "Queue Utilization",
        "type": "gauge",
        "targets": [
          {
            "expr": "opentrail_storage_queue_utilization_ratio",
            "legendFormat": "Queue Utilization"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 0.7},
                {"color": "red", "value": 0.9}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}